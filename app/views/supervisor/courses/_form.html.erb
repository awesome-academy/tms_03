<%= form_with model: [:supervisor, @course], local: true, class: "user" do |f| %>
  <% if @course.errors.any? %>
    <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li class="text-danger"><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control"%>
      </div>
    </div>
    <div class="col-6">
      <div class="form-group">
        <%= f.label :finish_date %>
        <%= f.date_field :finish_date, class: "form-control"%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: t("table.title") %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 15, class: "form-control", placeholder: t("table.description") %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, course_statuses_options,{}, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-user btn-block" %>
  </div>
<% end %>
