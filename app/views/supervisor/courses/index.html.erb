<div class="row">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%= t("supervisor.course_list") %></h6>
      </div>
      <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th><%= t("table.num") %></th>
              <th><%= t("table.title") %></th>
              <th><%= t("table.description") %></th>
              <th><%= t("table.created_by") %></th>
              <th><%= t("table.created_at") %></th>
              <th><%= t("table.updated_at") %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render @courses %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
