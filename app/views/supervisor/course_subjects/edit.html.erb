<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Edit</h6>
  </div>
  <div class="card-body">
    <%= form_with model: @course_subject,
                  url: supervisor_update_course_subjects_path(@course_subject.course_id, @course_subject.subject_id),
                  local: true do |f| %>
      <%= f.hidden_field :course_id %>
      <%= f.hidden_field :subject_id %>
      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: "form-control"%>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= f.label :finish_date %>
            <%= f.date_field :finish_date, class: "form-control"%>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, options_booleans, {}, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary btn-user btn-block" %>
      </div>
    <% end %>
  </div>
</div>
