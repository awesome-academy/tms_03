<tr>
  <td><%= subject_counter+1 %></td>
  <td><%= subject.title %></td>
  <td><%= subject.description %></td>
  <td><%= subject.creator.name %></td>
  <td><%= l subject.created_at, format: :short %></td>
  <td><%= l subject.updated_at, format: :short %></td>
  <td>
    <%= link_to t(:edit), edit_supervisor_subject_path(subject) %>
    <%= link_to t(:delete), [:supervisor, subject], method: :delete, data: {confirm: t(:are_you_sure)} %>
  </td>
</tr>
