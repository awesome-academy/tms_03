<!DOCTYPE html>
<html>
  <head>
    <title>Youapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  </head>
  <body class="bg-gradient-primary">
    <div class="container">
      <!-- Outer Row -->
      <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                <div class="col-lg-6">
                  <div style="padding: 180px 30px;">
                    <%= render 'layouts/utils/flash' %>
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4"><%= t(:title) %></h1>
                    </div>
                    <%= form_with url: login_path, local: true, class: "user" do |f| %>
                      <div class="form-group">
                        <%= f.email_field :email, class: "form-control form-control-user", placeholder: "Email address" %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, class: "form-control form-control-user", placeholder: "Password"  %>
                      </div>
                      <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
